<Page x:Class="Client.Pages.Page_EditProfile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1180"
      Title="Page_EditProfile">

    <Grid Background="#F3F3F3">
        <Label Content="Personalizar Perfil" Margin="40,40,0,0" FontFamily="Inter" Width="300" Height="50" FontSize="30" FontWeight="SemiBold" HorizontalAlignment="Left"  VerticalAlignment="Top"/>

        <Label Content="Correo Electronico" Margin="40,150,0,0" FontFamily="Inter" FontSize="24" FontWeight="SemiBold" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="TextBox_Email" Margin="40,190,0,0" Width="500" Background="LightGray" Style="{StaticResource MaterialDesignTextBox}" HorizontalAlignment="Left" VerticalAlignment="Top"/>

    </Grid>
</Page>
